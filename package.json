{
  "name": "9bot",
  "version": "1.0.0",
  "description": "discord bot for :9:",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc && npx tsc-alias",
    "start": "npm run build && node dist",
    "watch": "npx tsc -w && npx tsc-alias -w",
    "deploy": "npm run build && node dist/deploy-commands.js",
    "test": "echo 🤫🧏",
    "clean": "npx rimraf dist",
    "prepare": "simple-git-hooks"
  },
  "author": "9",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@seald-io/nedb": "^4.0.4",
    "cron": "^3.1.6",
    "date-fns": "^3.4.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "googleapis": "^133.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cron": "^2.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.2"
  }
